  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
           Report
        </h1>
        <% include ./partials/messages %>
        <form action="/users/report" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              value="<%= user.name %>"
              type="name"
              id="name"
              name="name"
              class="form-control"
              readonly
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <p>
              <label for="report">Report Incident</label>
              <textarea
               type="text"
               id="report"
               name="report"
               class="form-control"
               rows="5"
               cols="30">
          </textarea></p>

          <p>
          <button type="submit" class="btn btn-primary btn=block" id="myCheck" onclick="alert('Thank you for making PepePrices a safer space!')">
              Report
          </button>
        </p>

        <script>
          function myFunction() {
            document.getElementById("myCheck").click();
          }
          </script>
          